<config xmlns="http://www.hybris.com/cockpit/config" xmlns:y="http://www.hybris.com/cockpit/config/hybris"
	xmlns:wz="http://www.hybris.com/cockpitng/config/wizard-config"
	xmlns:list-view="http://www.hybris.com/cockpitng/component/listView"
	xmlns:editorArea="http://www.hybris.com/cockpitng/component/editorArea"
	xmlns:explorer-tree="http://www.hybris.com/cockpitng/config/explorertree"
	xmlns:simple-search="http://www.hybris.com/cockpitng/config/simplesearch"
	xmlns:advanced-search="http://www.hybris.com/cockpitng/config/advancedsearch"
	xmlns:df="http://www.hybris.com/cockpitng/component/dynamicForms"
	xmlns:dsb="http://www.hybris.com/cockpitng/config/dashboard">

	<!-- chimelongbackoffice UI configuration should be provided here -->

	<!--<context component="component-code" module="chimelongbackoffice"> -->
	<!--Please check documentation for code snippets for specific components -->
	<!--</context> -->

	<context type="CombinedTicketProduct" component="editor-area">
		<editorArea:editorArea name=""
			xmlns:editorArea="http://www.hybris.com/cockpitng/component/editorArea">
			<editorArea:essentials columns="4">
				<editorArea:essentialSection name="hmc.essential">
					<editorArea:attribute qualifier="code" />
					<editorArea:attribute qualifier="name" />
					<editorArea:attribute qualifier="catalogVersion" />
					<editorArea:attribute qualifier="approvalStatus" />
				</editorArea:essentialSection>
			</editorArea:essentials>
			<editorArea:tab name="hmc.tab.product.properties"
				position="1">
				<editorArea:section name="hmc.product.descriptions">
					<editorArea:attribute qualifier="description"
						editor="com.hybris.cockpitng.editor.localized(com.hybris.cockpitng.editor.wysiwyg)" />
				</editorArea:section>
				<editorArea:section columns="3" name="">
					<editorArea:panel colspan="3"
						name="panel.combinedproductentries" rowspan="2">
						<editorArea:attribute qualifier="combinedProductEntries"
							editor="com.hybris.cockpitng.editor.extendedmultireferenceeditor"
							type="MultiReference-LIST(CombinedProductEntry)">
						</editorArea:attribute>
					</editorArea:panel>
				</editorArea:section>
				<editorArea:section columns="2" name="">
					<editorArea:panel colspan="2" name="panel.dateRanges"
						rowspan="2">
						<editorArea:attribute qualifier="dateRanges"
							editor="com.hybris.cockpitng.editor.extendedmultireferenceeditor"
							type="MultiReference-LIST(DateRange)">
						</editorArea:attribute>
					</editorArea:panel>
				</editorArea:section>
			</editorArea:tab>

			<editorArea:tab name="hmc.tab.product.categorysystem"
				position="2">
				<editorArea:section name="hmc.section.product.productincategory">
					<editorArea:attribute qualifier="supercategories">
						<editorArea:editor-parameter>
							<editorArea:name>isNestedObjectCreationDisabled</editorArea:name>
							<editorArea:value>true</editorArea:value>
						</editorArea:editor-parameter>
					</editorArea:attribute>
				</editorArea:section>
			</editorArea:tab>

			<editorArea:tab name="hmc.tab.product.prices"
				position="3">
				<editorArea:section name="hmc.section.product.pricesdiscounts">
					<editorArea:panel colspan="2" name="panel.europe1Prices"
						rowspan="2">
						<editorArea:attribute description="hmc.text.product.pg"
							editor="com.hybris.cockpitng.editor.extendedmultireferenceeditor"
							qualifier="europe1Prices">
							<editorArea:editor-parameter>
								<editorArea:name>listConfigContext</editorArea:name>
								<editorArea:value>europe1PricesListView</editorArea:value>
							</editorArea:editor-parameter>
							<editorArea:editor-parameter>
								<editorArea:name>configurableFlowConfigCtx</editorArea:name>
								<editorArea:value>create-wizard-no-save</editorArea:value>
							</editorArea:editor-parameter>
						</editorArea:attribute>
					</editorArea:panel>
				</editorArea:section>
				<editorArea:section columns="2"
					name="hmc.section.product.discounts">
					<editorArea:panel colspan="2" name="panel.europe1Discounts"
						rowspan="2">
						<editorArea:attribute
							editor="com.hybris.cockpitng.editor.extendedmultireferenceeditor"
							qualifier="europe1Discounts">
							<editorArea:editor-parameter>
								<editorArea:name>listConfigContext</editorArea:name>
								<editorArea:value>europe1DiscountsListView</editorArea:value>
							</editorArea:editor-parameter>
						</editorArea:attribute>
					</editorArea:panel>
				</editorArea:section>
			</editorArea:tab>

			<editorArea:tab name="hmc.administration" position="99">
				<editorArea:section name="hmc.section.metadata">
					<editorArea:attribute qualifier="pk" />
					<editorArea:attribute qualifier="itemtype" />
					<editorArea:attribute qualifier="creationtime" />
				</editorArea:section>
				<editorArea:section name="hmc.section.saved.values">
					<editorArea:attribute qualifier="savedValues" />
				</editorArea:section>
			</editorArea:tab>
		</editorArea:editorArea>
	</context>

	<context type="CombinedTicketProduct" component="create-wizard">
		<wz:flow id="ProductWizard" title="create.title(ctx.TYPE_CODE)">
			<wz:prepare id="productPrepare">
				<wz:initialize property="newObject" type="ctx.TYPE_CODE" />
			</wz:prepare>
			<wz:step id="step1" label="create.product.essential.label"
				sublabel="create.product.essential.sublabel">
				<wz:content id="step1.content">
					<wz:property-list root="newObject">
						<wz:property qualifier="code" />
						<wz:property qualifier="name" />
						<wz:property qualifier="catalogVersion" />
						<wz:property qualifier="combinedProductEntries" />
						<wz:property qualifier="dateRanges" />
					</wz:property-list>
				</wz:content>
				<wz:navigation id="step1.navigation">
					<wz:cancel />
					<wz:done>
						<wz:save property="newObject" />
					</wz:done>
				</wz:navigation>
			</wz:step>
		</wz:flow>
	</context>

	<context merge-by="type" type="CombinedProductEntry" component="listview">
		<list-view:list-view>
			<list-view:column qualifier="product" position="1" />
			<list-view:column qualifier="quantity" position="2" />
		</list-view:list-view>
	</context>

	<context merge-by="type" type="DateRange" component="listview">
		<list-view:list-view>
			<list-view:column qualifier="startingDate" position="1" />
			<list-view:column qualifier="endingDate" position="2" />
		</list-view:list-view>
	</context>

	<context type="CombinedTicketProduct" component="advanced-search">
		<advanced-search:advanced-search
			xmlns:advanced-search="http://www.hybris.com/cockpitng/config/advancedsearch">
			<advanced-search:field-list>
				<advanced-search:field
					xmlns="http://www.hybris.com/cockpitng/config/advancedsearch" name="code"
					selected="true" operator="contains" />
				<advanced-search:field
					xmlns="http://www.hybris.com/cockpitng/config/advancedsearch" name="name"
					selected="true" operator="contains" />
				<advanced-search:field
					xmlns="http://www.hybris.com/cockpitng/config/advancedsearch" name="catalogVersion"
					selected="true" operator="equals" />
				<advanced-search:field
					xmlns="http://www.hybris.com/cockpitng/config/advancedsearch" name="combinedProductEntries"
					selected="true" operator="contains" />
			</advanced-search:field-list>
		</advanced-search:advanced-search>
	</context>

	<context type="AccommodationFacility" component="base">
		<y:base>
			<y:labels>
				<y:label>name + '[' + code +']'</y:label>
			</y:labels>
		</y:base>
	</context>

	<context type="Product" component="base">
		<y:base>
			<y:labels>
				<y:label>name + '[' + code + ']'</y:label>
			</y:labels>
		</y:base>
	</context>


    <!--AccommodationFacility START-->
    <context component="explorer-tree" merge-by="module">
        <n:explorer-tree xmlns:n="http://www.hybris.com/cockpitng/config/explorertree">
            <n:navigation-node id="hmc_treenode_chimelongcustom">
                <n:type-node id="AccommodationFacility" code="AccommodationFacility" />
            </n:navigation-node>
        </n:explorer-tree>
    </context>

    <context type="AccommodationFacility" component="listview">
        <list:list-view xmlns:list="http://www.hybris.com/cockpitng/component/listView">
            <list:column qualifier="code"/>
            <list:column qualifier="name"/>
            <list:column qualifier="discription"/>
        </list:list-view>
    </context>

    <context component="create-wizard" type="AccommodationFacility">
        <wz:flow xmlns:wz="http://www.hybris.com/cockpitng/config/wizard-config" id="AccommodationFacilityWizard" title="create.accommodationFacility.title">
            <wz:prepare id="accommodationFacilityPrepare">
                <wz:initialize property="newAccommodationFacility" type="AccommodationFacility"/>
            </wz:prepare>
            <wz:step id="step1" label="create.necessary.label">
                <wz:content id="step1.content">
                    <wz:property-list root="newAccommodationFacility">
                        <wz:property qualifier="code"/>
                        <wz:property qualifier="name"/>
                        <wz:property qualifier="discription"/>
                    </wz:property-list>
                </wz:content>
                <wz:navigation id="step1.navigation">
                    <wz:cancel/>
                    <wz:done visible="!#empty(newAccommodationFacility.code)">
                        <wz:save property="newAccommodationFacility"/>
                    </wz:done>
                </wz:navigation>
            </wz:step>
        </wz:flow>
    </context>

    <context type="AccommodationFacility" component="simple-search">
        <yss:simple-search xmlns:yss="http://www.hybris.com/cockpitng/config/simplesearch">
            <yss:field name="code"/>
            <yss:sort-field name="code" asc="true"/>
        </yss:simple-search>
    </context>
    <context type="AccommodationFacility" component="advanced-search">
        <advanced-search:advanced-search
                xmlns:advanced-search="http://www.hybris.com/cockpitng/config/advancedsearch">
            <advanced-search:field-list>
                <advanced-search:field
                        xmlns="http://www.hybris.com/cockpitng/config/advancedsearch" name="code"
                        selected="true" operator="contains" />
                <advanced-search:field
                        xmlns="http://www.hybris.com/cockpitng/config/advancedsearch" name="name"
                        selected="true" operator="contains" />
            </advanced-search:field-list>
        </advanced-search:advanced-search>
    </context>
    <!--AccommodationFacility END-->

    <!--DateRange START-->
    <context component="explorer-tree" merge-by="module">
        <n:explorer-tree xmlns:n="http://www.hybris.com/cockpitng/config/explorertree">
            <n:navigation-node id="hmc_treenode_chimelongcustom">
                <n:type-node id="DateRange" code="DateRange" />
            </n:navigation-node>
        </n:explorer-tree>
    </context>

    <context type="DateRange" component="listview">
        <list:list-view xmlns:list="http://www.hybris.com/cockpitng/component/listView">
            <list:column qualifier="startingDate"/>
            <list:column qualifier="endingDate"/>
        </list:list-view>
    </context>

    <context component="create-wizard" type="DateRange">
        <wz:flow xmlns:wz="http://www.hybris.com/cockpitng/config/wizard-config" id="DateRangeWizard" title="create.dateRange.title">
            <wz:prepare id="dateRangePrepare">
                <wz:initialize property="newDateRange" type="DateRange"/>
            </wz:prepare>
            <wz:step id="step1" label="create.necessary.label">
                <wz:content id="step1.content">
                    <wz:property-list root="newDateRange">
                        <wz:property qualifier="startingDate" type="java.util.Date"/>
                        <wz:property qualifier="endingDate" type="java.util.Date"/>
                    </wz:property-list>
                </wz:content>
                <wz:navigation id="step1.navigation">
                    <wz:cancel/>
                    <wz:done visible="newDateRange.startingDate != null AND newDateRange.endingDate != null">
                        <wz:save property="newDateRange"/>
                    </wz:done>
                </wz:navigation>
            </wz:step>
        </wz:flow>
    </context>

    <context type="DateRange" component="advanced-search">
        <advanced-search:advanced-search
                xmlns:advanced-search="http://www.hybris.com/cockpitng/config/advancedsearch">
            <advanced-search:field-list>
                <advanced-search:field
                        xmlns="http://www.hybris.com/cockpitng/config/advancedsearch" name="startingDate"
                        selected="true" operator="greaterOrEquals" />
                <advanced-search:field
                        xmlns="http://www.hybris.com/cockpitng/config/advancedsearch" name="endingDate"
                        selected="true" operator="lessOrEquals" />
            </advanced-search:field-list>
        </advanced-search:advanced-search>
    </context>
    <!--DateRange END-->
    
    <context merge-by="module" parent="auto" component="explorer-tree">
		<explorer-tree:explorer-tree xmlns:explorer-tree="http://www.hybris.com/cockpitng/config/explorertree">
			<explorer-tree:navigation-node id="hmc.Circus" merge-mode="append">
					<explorer-tree:type-node code="CircusVariantTicket" id="hmc_type_tree_circusvariantticket" />
					<explorer-tree:type-node code="CircusShowTime" id="hmc_type_tree_circusshowtime" />
			</explorer-tree:navigation-node>
					<explorer-tree:type-node code="ClDiscountGroupRule" id="hmc_type_tree_cldiscountgrouprule" />
		</explorer-tree:explorer-tree>
	</context>
	<context type="CircusVariantTicket" component="editor-area">
		<editorArea:editorArea name=""
			xmlns:editorArea="http://www.hybris.com/cockpitng/component/editorArea">
			<editorArea:essentials columns="4">
				<editorArea:essentialSection name="hmc.essential">
					<editorArea:attribute qualifier="code" />
					<editorArea:attribute qualifier="name" />
					<editorArea:attribute qualifier="catalogVersion" />
					<editorArea:attribute qualifier="approvalStatus" />
				</editorArea:essentialSection>
			</editorArea:essentials>
			<editorArea:tab name="hmc.tab.product.properties"
				position="1">
				<editorArea:section name="hmc.section.CircusVariantTicket.description">
					<editorArea:attribute qualifier="description"
						editor="com.hybris.cockpitng.editor.localized(com.hybris.cockpitng.editor.wysiwyg)" />
					<editorArea:panel colspan="2"
						name="panel.showTime" rowspan="2">
						<editorArea:attribute qualifier="showTime">
						</editorArea:attribute>
					</editorArea:panel>
					<editorArea:panel colspan="2" name="panel.dateRanges"
						rowspan="2">
						<editorArea:attribute qualifier="dateRanges"
							editor="com.hybris.cockpitng.editor.extendedmultireferenceeditor"
							type="MultiReference-LIST(DateRange)">
						</editorArea:attribute>
					</editorArea:panel>
				</editorArea:section>
			</editorArea:tab>

			<editorArea:tab name="hmc.tab.product.categories"
				position="2">
				<editorArea:section name="hmc.section.product.productincategory">
					<editorArea:attribute qualifier="supercategories">
						<editorArea:editor-parameter>
							<editorArea:name>isNestedObjectCreationDisabled</editorArea:name>
							<editorArea:value>true</editorArea:value>
						</editorArea:editor-parameter>
					</editorArea:attribute>
				</editorArea:section>
			</editorArea:tab>

			<editorArea:tab name="hmc.administration" position="99">
				<editorArea:section name="hmc.section.metadata">
					<editorArea:attribute qualifier="pk" />
					<editorArea:attribute qualifier="itemtype" />
					<editorArea:attribute qualifier="creationtime" />
				</editorArea:section>
				<editorArea:section name="hmc.section.saved.values">
					<editorArea:attribute qualifier="savedValues" />
				</editorArea:section>
			</editorArea:tab>
		</editorArea:editorArea>
	</context>
	
	<context type="CircusShowTime" component="editor-area">
		<editorArea:editorArea name=""
			xmlns:editorArea="http://www.hybris.com/cockpitng/component/editorArea">
			<editorArea:essentials columns="4">
				<editorArea:essentialSection name="hmc.essential">
					<editorArea:attribute qualifier="showCode" />
					<editorArea:attribute qualifier="showTime" />
					<editorArea:attribute qualifier="isDisabled" />
				</editorArea:essentialSection>
			</editorArea:essentials>

			<editorArea:tab name="hmc.administration" position="99">
				<editorArea:section name="hmc.section.metadata">
					<editorArea:attribute qualifier="pk" />
					<editorArea:attribute qualifier="itemtype" />
					<editorArea:attribute qualifier="creationtime" />
				</editorArea:section>
				<editorArea:section name="hmc.section.saved.values">
					<editorArea:attribute qualifier="savedValues" />
				</editorArea:section>
			</editorArea:tab>
		</editorArea:editorArea>
	</context>
	
	<context type="CircusShowTime" component="base">
		<y:base>
			<y:labels>
				<y:label>showCode + '[' + showTime + ']'</y:label>
			</y:labels>
		</y:base>
	</context>
	
	<context type="ClDiscountGroupRule" component="editor-area">
		<editorArea:editorArea name=""
			xmlns:editorArea="http://www.hybris.com/cockpitng/component/editorArea">
			<editorArea:essentials columns="4">
				<editorArea:essentialSection name="hmc.essential">
				<editorArea:panel colspan="2"
						name="panel.showTime" rowspan="2">
						<editorArea:attribute qualifier="dateRanges"
							editor="com.hybris.cockpitng.editor.extendedmultireferenceeditor"
							type="MultiReference-LIST(DateRange)">
						</editorArea:attribute>
					</editorArea:panel>
					<editorArea:panel colspan="2" name="panel.dateRanges"
						rowspan="2">
						<editorArea:attribute qualifier="discountRows"
							editor="com.hybris.cockpitng.editor.extendedmultireferenceeditor"
							type="MultiReference-LIST(DiscountRowCollectionType)">
						</editorArea:attribute>
					</editorArea:panel>
				</editorArea:essentialSection>
			</editorArea:essentials>

			<editorArea:tab name="hmc.administration" position="99">
				<editorArea:section name="hmc.section.metadata">
					<editorArea:attribute qualifier="pk" />
					<editorArea:attribute qualifier="itemtype" />
					<editorArea:attribute qualifier="creationtime" />
				</editorArea:section>
				<editorArea:section name="hmc.section.saved.values">
					<editorArea:attribute qualifier="savedValues" />
				</editorArea:section>
			</editorArea:tab>
		</editorArea:editorArea>
	</context>

</config>
