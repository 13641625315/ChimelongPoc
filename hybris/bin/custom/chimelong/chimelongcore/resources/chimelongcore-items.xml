<items xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="items.xsd">

	<collectiontypes>
		<collectiontype code="GenderList" elementtype="Gender"
			autocreate="true" generate="true" type="list" />
		<collectiontype code="SwatchColorSet" elementtype="SwatchColorEnum"
			autocreate="true" generate="true" type="set" />
		<collectiontype code="CombinedProductEntryList"
			elementtype="CombinedProductEntry" autocreate="true" generate="true"
			type="list" />
		<collectiontype code="DateRangeList"
			elementtype="de.hybris.platform.util.StandardDateRange" autocreate="true"
			generate="true" type="list" />
	</collectiontypes>

	<enumtypes>
		<enumtype generate="true" code="SwatchColorEnum" autocreate="true"
			dynamic="true">
			<value code="BLACK" />
			<value code="BLUE" />
			<value code="BROWN" />
			<value code="GREEN" />
			<value code="GREY" />
			<value code="ORANGE" />
			<value code="PINK" />
			<value code="PURPLE" />
			<value code="RED" />
			<value code="SILVER" />
			<value code="WHITE" />
			<value code="YELLOW" />
		</enumtype>

		<enumtype generate="true" code="TicketType" autocreate="true">
			<value code="ENTRANCETICKET" />
			<value code="FOODTICKET" />
			<value code="CIRCUSTICKET" />
		</enumtype>

		<enumtype generate="true" code="CustomerType" autocreate="false">
			<value code="CHILD" />
			<value code="ADULT" />
			<value code="ELDER" />
		</enumtype>

		<enumtype generate="true" code="SalesChannel" autocreate="true">
			<value code="TA" />
			<value code="OTA" />
		</enumtype>

		<enumtype generate="true" code="ChimelongDiscountGroup"
			autocreate="true">
			<value code="TA" />
			<value code="OTA" />
			<value code="VIP1" />
		</enumtype>

		<enumtype generate="true" code="BedType" autocreate="true">
			<value code="TA" />
			<value code="OTA" />
			<value code="VIP1" />
		</enumtype>
	</enumtypes>

	<relations>
		<relation code="SalesChannel2ProductRel" generate="true"
			localized="false" autocreate="true">
			<deployment table="SalesChannel2ProductRel" typecode="31001" />
			<sourceElement qualifier="salesChannels" type="SalesChannel"
				cardinality="many" collectiontype="list" />
			<targetElement qualifier="products" type="Product"
				cardinality="many" collectiontype="list" ordered="true" />
		</relation>

		<relation code="ChimelongDiscountGroup2RuleRel" generate="true"
			localized="false" autocreate="true">
			<deployment table="ChimelongDiscountGroup2RuleRel"
				typecode="31002" />
			<sourceElement qualifier="chimelongDiscountGroups"
				type="ChimelongDiscountGroup" cardinality="many" collectiontype="list" />
			<targetElement qualifier="chimelongDiscountGroupRules"
				type="ChimelongDiscountGroupRule" cardinality="many" collectiontype="list"
				ordered="true" />
		</relation>

		<relation code="Accommodation2FacilitiesRel" generate="true"
			localized="false" autocreate="true">
			<deployment table="Accommodation2FacilitiesRel" typecode="31003" />
			<sourceElement qualifier="accommodationProducts" type="AccommodationProduct"
				cardinality="many" collectiontype="list" />
			<targetElement qualifier="accommodationFacilities"
				type="AccommodationFacility" cardinality="many" collectiontype="list"
				ordered="true" />
		</relation>
	</relations>

	<itemtypes>
		<!-- Add your item definitions here -->
		<typegroup name="Chimelong">
			<itemtype code="TicketProduct" extends="Product" autocreate="true"
				generate="true" jaloclass="com.chimelong.core.jalo.CombinedTicketVariantProduct">
				<deployment table="TicketProduct" typecode="30001"></deployment>
				<attributes>
					<attribute qualifier="ticketType" type="TicketType">
						<persistence type="property" />
					</attribute>
					<attribute qualifier="dateRanges" type="DateRangeList">
						<persistence type="property" />
					</attribute>
					<attribute qualifier="packageCode" type="java.lang.String">
						<persistence type="property" />
					</attribute>
					<attribute qualifier="customerType" type="CustomerType">
						<persistence type="property" />
					</attribute>
				</attributes>
			</itemtype>

			<itemtype code="AccommodationProduct" extends="Product"
				autocreate="true" generate="true"
				jaloclass="com.chimelong.core.jalo.AccommodationProduct">
				<deployment table="AccommodationProduct" typecode="30002"></deployment>
				<attributes>
					<attribute qualifier="bedType" type="BedType">
						<persistence type="property" />
					</attribute>
				</attributes>
			</itemtype>

			<itemtype code="CombinedProductEntry" autocreate="true"
				generate="true" jaloclass="com.chimelong.core.jalo.CombinedProductEntry">
				<deployment table="CombinedProductEntry" typecode="30003"></deployment>
				<attributes>
					<attribute qualifier="product" type="Product">
						<persistence type="property" />
					</attribute>
					<attribute qualifier="quantity" type="java.lang.Long">
						<persistence type="property" />
					</attribute>
					<attribute autocreate="true" qualifier="europe1Prices"
						type="PriceRowCollectionType">
						<persistence type="dynamic" />
					</attribute>
				</attributes>
			</itemtype>

			<itemtype code="CombinedVariantProduct" extends="VariantProduct"
				autocreate="true" generate="true"
				jaloclass="com.chimelong.core.jalo.CombinedVariantProduct">
				<deployment table="CombinedVariantProduct" typecode="30004"></deployment>
				<attributes>
					<attribute qualifier="combinedProductEntries" type="CombinedProductEntryList">
						<persistence type="property" />
					</attribute>
					<attribute qualifier="totalPrice" type="java.lang.Double">
						<persistence type="property">
							<columntype>
								<value>java.math.BigDecimal</value>
							</columntype>
						</persistence>
					</attribute>
				</attributes>
			</itemtype>

			<itemtype code="CircusTicketVariantProduct" extends="VariantProduct"
				autocreate="true" generate="true"
				jaloclass="com.chimelong.core.jalo.CircusTicketVariantProduct">
				<deployment table="CircusTicketVariantProduct" typecode="30005"></deployment>
				<attributes>
					<attribute qualifier="showTime" type="java.lang.String">
						<persistence type="property" />
					</attribute>
				</attributes>
			</itemtype>

			<itemtype code="CircusShowTime" autocreate="true" generate="true"
				jaloclass="com.chimelong.core.jalo.CircusShowTime">
				<deployment table="CircusTicketVariantProduct" typecode="30006"></deployment>
				<attributes>
					<attribute qualifier="showName" type="java.lang.String">
						<persistence type="property" />
					</attribute>
					<attribute qualifier="showStartTime" type="java.lang.String">
						<persistence type="property" />
					</attribute>
					<attribute qualifier="isDisabled" type="java.lang.Boolean">
						<persistence type="property" />
					</attribute>
				</attributes>
			</itemtype>

			<itemtype code="ChimelongDiscountGroupRule" autocreate="true"
				generate="true" jaloclass="com.chimelong.core.jalo.ChimelongDiscountGroupRule">
				<deployment table="CircusTicketVariantProduct" typecode="30007"></deployment>
				<attributes>
					<attribute qualifier="dateRanges" type="DateRangeList">
						<persistence type="property" />
					</attribute>
					<attribute qualifier="discountRows" type="DiscountRowCollectionType">
						<persistence type="property" />
					</attribute>
				</attributes>
			</itemtype>

			<itemtype code="StockLevel" autocreate="false" generate="false">
				<description>Extending StockLevel type to include date related fields</description>
				<attributes>
					<attribute type="java.util.Date" qualifier="date">
						<persistence type="property" />
					</attribute>
				</attributes>
			</itemtype>

			<itemtype code="AccommodationFacility" autocreate="true"
				generate="true" jaloclass="com.chimelong.core.jalo.AccommodationFacility">
				<deployment table="AccommodationFacility" typecode="30008"></deployment>
				<attributes>
					<attribute qualifier="code" type="java.lang.String">
						<modifiers unique="true" />
						<persistence type="property" />
					</attribute>
					<attribute qualifier="name" type="localized:java.lang.String">
						<persistence type="property" />
					</attribute>
					<attribute qualifier="discription" type="localized:java.lang.String">
						<persistence type="property" />
					</attribute>
				</attributes>
			</itemtype>
		</typegroup>

		<!-- TypeGroups are for structure of this file only -->

		<typegroup name="Apparel">
			<itemtype code="ApparelProduct" extends="Product"
				autocreate="true" generate="true" jaloclass="com.chimelong.core.jalo.ApparelProduct">
				<description>Base apparel product extension that contains additional attributes.</description>
				<attributes>
					<attribute qualifier="genders" type="GenderList">
						<description>List of genders that the ApparelProduct is designed for</description>
						<modifiers />
						<persistence type="property" />
					</attribute>
				</attributes>
			</itemtype>

			<itemtype code="ApparelStyleVariantProduct" extends="VariantProduct"
				autocreate="true" generate="true"
				jaloclass="com.chimelong.core.jalo.ApparelStyleVariantProduct">
				<description>Apparel style variant type that contains additional attribute describing variant style.
                </description>
				<attributes>
					<attribute qualifier="style" type="localized:java.lang.String"
						metatype="VariantAttributeDescriptor">
						<description>Color/Pattern of the product.</description>
						<modifiers />
						<persistence type="property" />
					</attribute>

					<attribute qualifier="swatchColors" type="SwatchColorSet">
						<description>A normalized color mapping to a standardized front-end navigable name.
                        </description>
						<modifiers />
						<persistence type="property" />
					</attribute>
				</attributes>

			</itemtype>

			<itemtype code="ApparelSizeVariantProduct" extends="ApparelStyleVariantProduct"
				autocreate="true" generate="true"
				jaloclass="com.chimelong.core.jalo.ApparelSizeVariantProduct">
				<description>Apparel size variant type that contains additional attribute describing variant size.
                </description>
				<attributes>
					<attribute qualifier="size" type="localized:java.lang.String"
						metatype="VariantAttributeDescriptor">
						<description>Size of the product.</description>
						<modifiers />
						<persistence type="property" />
					</attribute>
				</attributes>
			</itemtype>
		</typegroup>

		<typegroup name="Electronics">
			<itemtype code="ElectronicsColorVariantProduct" extends="VariantProduct"
				autocreate="true" generate="true"
				jaloclass="com.chimelong.core.jalo.ElectronicsColorVariantProduct">
				<description>Electronics color variant type that contains additional attribute describing variant color.
                </description>
				<attributes>
					<attribute qualifier="color" type="localized:java.lang.String"
						metatype="VariantAttributeDescriptor">
						<description>Color of the product.</description>
						<modifiers />
						<persistence type="property" />
					</attribute>
				</attributes>
			</itemtype>
		</typegroup>

	</itemtypes>
</items>
